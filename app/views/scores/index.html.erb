<h1>Listing scores</h1>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>Player</th>
      <th>Game</th>
      <th>Group</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.score %></td>
        <td><%= score.player.nickname %></td>
        <td><%= score.league_game.game.title %></td>
        <td><%= score.group.group_rank %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

