<h1>Listing team_players</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Player</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @team_players.each do |team_player| %>
      <tr>
        <td><%= team_player.team_id %></td>
        <td><%= team_player.player_id %></td>
        <td><%= link_to 'Show', team_player %></td>
        <td><%= link_to 'Edit', edit_team_player_path(team_player) %></td>
        <td><%= link_to 'Destroy', team_player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

